
@model EditandDeleteRoomVM
@{
    ViewData["Title"] = "EditHotelRoom";
}

<div class="container">
    <h2 class="py-3"> ویرایش اتاق</h2>
    <form asp-action="EditRoom" method="post" enctype="multipart/form-data">

        <input asp-for="Id" type="hidden" />
        <input asp-for="HotelId" type="hidden" />
        <input asp-for="ImageName" type="hidden" />
        <div class="row ">
            <div class="mb-3 col-6">
                <img class="img-thumbnail w-50" src="/asset/img/HotelRoom/@Model.ImageName">
            </div>
            <div class="mb-3 col-6">
                <label asp-for="File" class="form-label"></label>
                <input asp-for="File" class="form-control">
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Title" class="form-label"></label>
                <input disabled="disabled" asp-for="Title" class="form-control text-start">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="BedCount" class="form-label"></label>
                <input disabled="disabled" asp-for="BedCount" class="form-control text-start">
                <span asp-validation-for="BedCount" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Capacity" class="form-label"></label>
                <input disabled="disabled" asp-for="Capacity" class="form-control text-start">
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Count" class="form-label"></label>
                <input disabled="disabled" asp-for="Count" class="form-control text-start">
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label asp-for="Price" class="form-label"></label>
                <input disabled="disabled" asp-for="Price" class="form-control text-start">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3 col-6">
                <label class="form-label" asp-for="IsActive"></label>
                <div class="col-md-10">
                    <div class="radio-single">
                        <label>
                            @Html.RadioButtonFor(m => m.IsActive, "true")
                            <span class="badge badge-pill bg-success">فعال</span>
                        </label>
                    </div>
                    <div class="radio-single">
                        <label>
                            @Html.RadioButtonFor(m => m.IsActive, "false")
                            <span class="badge badge-pill bg-danger">غیر فعال</span>
                        </label>
                    </div>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="mb-3 col-12">
                <label asp-for="Description" class="form-label"></label>
                <textarea rows="4" asp-for="Description" class="form-control text-start"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-warning"> ویرایش اتاق </button>
            </div>
        </div>
    </form>

</div>

