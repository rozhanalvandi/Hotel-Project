@model ICollection<AdvantageRoom>

@{
    ViewData["Title"] = "ShowAllAdvantage";
}

<h2 class="py-3">لیست ویژگی ها</h2>
<div class="row">
    <div class="col-12 pb-3">
        <a asp-action="AddAdvantage" class="btn btn-outline-primary">ایجاد ویژگی</a>
    </div>
    <div class="col-12">
        <div class="admin-table ">
            <table class="table">
                <thead>
                    <tr class="table-secondary">
                        <th>عنوان</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-controller="Product" asp-action="EditAdvantage" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-warning">ویرایش</a>
                                    <a asp-controller="Product" asp-action="DeleteAdvantage" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-danger ms-2">حذف</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="col-4">
                                در حال حاضر ویژگی موجود نمیباشد
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

