@model CrudforAdvantageVM
@{
    ViewData["Title"] = "DeleteAdvantage";
}

<div class="container">
    <h2 class="py-3"> حذف ویژگی</h2>
    <form asp-action="DeleteAdvantage" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="row ">
            <div class="mb-3 col-6">
                <label asp-for="Name" class="form-label"></label>
                <input readonly="readonly" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-danger"> حذف ویژگی </button>
            </div>
        </div>
    </form>

</div>

